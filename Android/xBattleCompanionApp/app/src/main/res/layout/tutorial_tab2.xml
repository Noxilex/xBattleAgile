<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/layout_tuto2"
    tools:context=".TutoActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:background="@color/Color3">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:layout_weight="0.1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/tuto_title1"
                android:id="@+id/tuto_title3"
                android:onClick="onClick_Title"
                android:clickable="true"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="15dp"
                android:background="@color/Color5"
                android:textColor="@color/Color1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/tuto_title4"
                android:onClick="onClick_Title"
                android:clickable="true"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="15dp"
                android:textStyle="bold"
                android:background="@color/Color1"
                android:textColor="@color/Color3"
                android:text="@string/tuto_title2"
                android:maxHeight="15dp"
                android:minHeight="15dp" />

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/tuto_title2"
            android:id="@+id/textView"
            android:layout_weight="0.1"
            android:gravity="center_vertical|center_horizontal"
            android:background="@color/Color1"
            android:textColor="@color/Color3"
            android:minHeight="40dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/tuto_pipes_button"
            android:id="@+id/button4"
            android:layout_weight="0.6"
            android:background="@color/Color1"
            android:textColor="@color/Color3"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:onClick="onClick_Tuto_Pipes" />

    </LinearLayout>
</RelativeLayout>